# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java文件配置
[*.{java,groovy,gradle}]
indent_style = space
indent_size = 4
continuation_indent_size = 8

# 配置文件
[*.{yml,yaml,json,xml}]
indent_style = space
indent_size = 2

# Shell脚本
[*.sh]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false

# SQL文件
[*.sql]
indent_style = space
indent_size = 4